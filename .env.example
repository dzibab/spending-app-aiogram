# .env example for spending-app-aiogram

# Telegram bot token
BOT_TOKEN=your_telegram_bot_token

# PostgreSQL database name
POSTGRES_DB=spending

# PostgreSQL password (set a secure password for production, do NOT commit real secrets)
POSTGRES_PASSWORD=your_postgres_password

# PostgreSQL DSN (Data Source Name)
# For local development, you can use the following format:
# POSTGRES_DSN=postgresql://postgres:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
POSTGRES_DSN=postgresql://postgres:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Optional: API key for currency exchange
EXCHANGE_API_KEY=your_exchange_api_key
